<controls:FancyWindow xmlns="https://spacestation14.io"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:controls="clr-namespace:Content.Client.UserInterface.Controls"
    MinWidth="200" MinHeight="300" Title="{Loc aicamerawindowneedsalocalization}">
    <BoxContainer Name="Box" Orientation="Vertical" Margin="5">
        <BoxContainer Orientation="Horizontal" Margin="0 5 0 5">
            <LineEdit Name="SearchBar" PlaceHolder="{Loc 'searchboxneedsalocaletoo'}" HorizontalExpand="True" Margin="0 0 2 0"/>
            <Button Name="Refresh" Text="{Loc 'searchbuttonneedsalocalalso'}" Margin="2 0 0 0"/>
        </BoxContainer>

        <Label Name="Text" Text="No cameras found." />
        <ItemList Name="SubnetList" SelectMode="Single" VerticalExpand="True" Margin="0 5" />
    </BoxContainer>
</controls:FancyWindow>
