<DefaultWindow xmlns="https://spacestation14.io"
    MinSize="650 250"
    SetSize="675 250">
    <BoxContainer Orientation="Horizontal">
        <!-- List of vendable items -->
        <ItemList Name="VendingContents" MinWidth="350" SizeFlagsStretchRatio="8" HorizontalExpand="True" VerticalExpand="True" />

        <Control MinSize="10 10" />

        <BoxContainer Orientation="Vertical" MinWidth="275" MaxWidth="275" SizeFlagsStretchRatio="2" HorizontalExpand="True" VerticalExpand="True">
            <Button Disabled="True">
                <BoxContainer Orientation="Vertical">
                    <Control MinSize="5 5" />

                    <!-- This gets filled with information about the currently selected item -->
                    <BoxContainer Name="VendingInfo" Orientation="Vertical" />

                    <!-- Gets enabled if an item is selected -->
                    <Button Name="VendButton" Text="Vend" Disabled="True" />

                    <Control MinSize="5 5" />
                </BoxContainer>
            </Button>
        </BoxContainer>
    </BoxContainer>
</DefaultWindow>
